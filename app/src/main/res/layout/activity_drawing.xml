<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White Theme"
            />
        <TextView
            android:id="@+id/tv_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue Theme"
            />
        <TextView
            android:id="@+id/tv_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Theme"
            />

        <TextView
            android:id="@+id/tv_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customize Theme"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        >
        <com.funyoung.drawing.MyCanvas
            android:id="@+id/my_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <ImageView
            android:id="@+id/eraser"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:layout_toLeftOf="@+id/color_picker"
            android:padding="@dimen/normal_margin"
            android:src="@drawable/ic_eraser_off"/>

        <ImageView
            android:id="@+id/color_picker"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:layout_alignParentRight="true"/>

        <!--<ImageView-->
            <!--android:id="@+id/undo"-->
            <!--android:layout_width="@dimen/normal_icon_size"-->
            <!--android:layout_height="@dimen/normal_icon_size"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@id/color_picker"-->
            <!--android:padding="@dimen/medium_margin"-->
            <!--android:src="@drawable/ic_undo"-->
            <!--android:visibility="gone"/>-->

        <SeekBar
            android:id="@+id/stroke_width_bar"
            android:layout_width="@dimen/stroke_bar_size"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:max="75"
            android:padding="@dimen/medium_margin"
            android:progress="5"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_87"
            >
            <TextView
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/emoji_back"
                android:textAllCaps="false"
                android:textSize="13sp"/>

            <View
                android:id="@+id/center_anchor"
                android:visibility="invisible"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btn_reset"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/center_anchor"
                android:layout_toStartOf="@id/center_anchor"
                android:src="@drawable/drawboard_icon_reset"/>

            <ImageView
                android:id="@+id/btn_undo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/center_anchor"
                android:layout_toEndOf="@id/center_anchor"
                android:src="@drawable/drawboard_icon_undo"/>

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/drawboard_icon_send"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_send"
                android:layout_toStartOf="@id/btn_send"
                android:background="@color/divier_bkg" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
