<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:background="@drawable/bg_sound_item_container"
    android:clickable="true"
    android:gravity="center">
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            />
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sound_icon_view"
            android:layout_width="@dimen/sound_fragment_icon_size"
            android:layout_height="@dimen/sound_fragment_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@string/item_4_sound_icon_view"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>
        <ImageView
            android:id="@+id/iv_select_indicator"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/item_4_select_indicator"
            android:layout_gravity="end|bottom" />
</FrameLayout>
