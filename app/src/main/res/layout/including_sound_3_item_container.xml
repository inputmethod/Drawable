<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="107dp"
    android:layout_height="107dp"
    android:background="@drawable/bg_sound_item_container"
    android:gravity="center">
        <ImageView
            android:id="@+id/sound_icon_view"
            android:layout_width="@dimen/sound_fragment_icon_size"
            android:layout_height="@dimen/sound_fragment_icon_size"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_select_indicator"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom" />
</FrameLayout>
